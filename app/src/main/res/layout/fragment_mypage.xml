<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_settings"
            android:padding="16dp">
        </ImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/setting_btn">

            <ImageView
                android:id="@+id/user_img"
                android:layout_width="88dp"
                android:layout_height="88dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_user_default">
            </ImageView>

            <ImageView
                android:id="@+id/user_img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera"
                app:layout_constraintRight_toRightOf="@id/user_img"
                app:layout_constraintBottom_toBottomOf="@id/user_img">
            </ImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/user_img"
                tools:text="닉네임"
                android:textSize="20dp"
                android:textColor="@color/dark_g2.5"
                android:layout_marginLeft="24dp"
                android:fontFamily="sans-serif-light"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/user_name"
                app:layout_constraintLeft_toLeftOf="@id/user_name"
                tools:text="여성 · 20대 후반"
                android:textSize="12dp"
                android:textColor="@color/dark_g2.5"
                android:layout_marginTop="4dp"/>

            <ImageView
                android:id="@+id/user_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_right_arrow">
            </ImageView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/runner_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/user_status"
                app:layout_constraintLeft_toLeftOf="@id/user_status"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_radius_20_dark_g4_stroke">
                <ImageView
                    android:id="@+id/status_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                </ImageView>

                <TextView
                    android:id="@+id/runner_status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/status_img"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="성실러너"
                    android:textColor="@color/dark_g3"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="4dp">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/user_job_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/runner_status"
                app:layout_constraintTop_toTopOf="@id/runner_status"
                app:layout_constraintBottom_toBottomOf="@id/runner_status"
                tools:text="기획/전략/경영"
                android:textColor="@color/logo_yellow"
                android:textSize="10sp"
                android:layout_marginLeft="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_dark_g5_radius_24">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorColor="@color/white"
            app:tabPaddingTop="16dp"
            app:tabPaddingBottom="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:tabTextAppearance="@style/tab_text"
            app:tabTextColor="@color/dark_g4.5"
            app:layout_constraintTop_toBottomOf="@id/user_main"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

