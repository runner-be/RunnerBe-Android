<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/scrap_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="찜 목록"
            android:textSize="16dp"
            android:textColor="@color/dark_g3"
            android:layout_margin="16dp">
        </TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/scrap_text_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_tab"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/book_mark_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tab"
                app:tabBackground="@drawable/selector_tab"
                app:tabMode="scrollable"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:tabSelectedTextColor="@color/black"
                app:tabTextColor="@color/dark_g4.5"
                app:tabPaddingTop="12dp"
                app:tabPaddingBottom="12dp"
                app:tabPaddingStart="35dp"
                app:tabPaddingEnd="35dp"
                android:textSize="14dp"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp">
            </com.google.android.material.tabs.TabLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tab_layout"
            android:id="@+id/viewPager"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

