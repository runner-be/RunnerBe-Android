<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.screen.fragment.mypage.calendar.weekly.WeeklyCalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="4dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_calendar_weekly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>

        <TextView
            android:id="@+id/tv_stamp_weekly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_dark_6g_solid_radius_6"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="@string/lets_add_stamp"
            android:textColor="@color/dark_g3_5"
            android:textSize="15sp" />

    </LinearLayout>

</layout>