<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.applemango.runnerbe.presentation.screen.fragment.map.filter.RunningFilterFragment" />
        <variable
            name="vm"
            type="com.applemango.runnerbe.presentation.screen.fragment.map.filter.RunningFilterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_g7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/filterTopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:onClick="@{() -> fragment.goBack()}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:padding="10dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/top_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter"
                android:textColor="@color/dark_g3_5"
                android:fontFamily="sans-serif-black"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh"
                android:onClick="@{() -> fragment.refresh()}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/filterTopLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/genderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="16sp"
                    android:textColor="@color/dark_g3_5"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <RadioGroup
                    android:id="@+id/genderTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@={vm.genderRadioChecked}"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/genderTextView">

                    <RadioButton
                        android:id="@+id/allTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/tc_select_gender_tab"
                        android:text="@string/all"
                        android:layout_marginRight="24dp"
                        android:checked="true"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="19dp"
                        android:button="@null"
                        android:background="@drawable/selector_gender_tab"/>

                    <RadioButton
                        android:id="@+id/femaleTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:textSize="14sp"
                        android:textColor="@color/tc_select_gender_tab"
                        android:text="@string/female"
                        android:checked="false"
                        android:layout_gravity="center"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="19dp"
                        android:button="@null"
                        android:background="@drawable/selector_gender_tab"/>

                    <RadioButton
                        android:id="@+id/maleTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:textSize="14sp"
                        android:textColor="@color/tc_select_gender_tab"
                        android:text="@string/male"
                        android:checked="false"
                        android:layout_gravity="center"
                        android:paddingVertical="6dp"
                        android:paddingHorizontal="19dp"
                        android:button="@null"
                        android:background="@drawable/selector_gender_tab"/>

                </RadioGroup>

                <View
                    android:id="@+id/genderIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_g6"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/genderTab"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/recruitmentAgeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age"
                    android:textColor="@color/dark_g3_5"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/genderIndicator"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/checkBoxLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="23dp"
                    android:gravity="center"
                    android:layout_marginRight="21dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/genderIndicator">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_age"
                        android:textColor="@color/dark_g4"
                        android:textSize="12sp"
                        android:layout_marginRight="10dp"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:background="@drawable/selector_check_box"
                        android:checked="@={vm.isAllAgeChecked()}" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ageSlideBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recruitmentAgeTextView">

                    <TextView
                        android:id="@+id/ageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vm.recruitmentAge}"
                        android:enabled="@{!vm.isAllAgeChecked()}"
                        android:textColor="@color/tc_enable_primary_g4"
                        android:textSize="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/ageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:values="@array/initial_slider_values"
                        app:trackColorActive="@color/track_select_active"
                        app:trackColorInactive="@color/dark_g5_5"
                        app:tickColorActive="@color/track_select_active"
                        app:tickColorInactive="@color/dark_g5_5"
                        app:thumbColor="@color/track_select_active"
                        app:trackHeight="8dp"
                        android:enabled="@{!vm.isAllAgeChecked()}"
                        android:theme="@style/SliderTheme"
                        android:valueFrom="20.0"
                        android:valueTo="65.0"
                        android:stepSize="5.0"
                        app:layout_constraintTop_toBottomOf="@id/ageText"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/ageIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_g6"
                    android:layout_marginTop="32dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/ageSlideBarLayout"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jobTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/job"
                    android:textColor="@color/dark_g3_5"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ageIndicator"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/job_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/jobTextView">

                    <LinearLayout
                        android:id="@+id/btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <RadioGroup
                            android:id="@+id/line1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkedButton="@={vm.jobRadioChecked}"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/psv_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:text="@string/psv_and_icon"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/edu_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/edu_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/dev_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/dev_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/btn1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <RadioGroup
                            android:id="@+id/line2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkedButton="@={vm.jobRadioChecked}"
                            android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/psm_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/psm_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/des_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/des_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/btn2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <RadioGroup
                            android:id="@+id/line3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkedButton="@={vm.jobRadioChecked}"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/mpr_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/mpr_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/ser_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/ser_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/pro_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/pro_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/btn3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <RadioGroup
                            android:id="@+id/line4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkedButton="@={vm.jobRadioChecked}"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/res_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/res_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/saf_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/saf_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/med_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/med_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/btn4"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <RadioGroup
                            android:id="@+id/line5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkedButton="@={vm.jobRadioChecked}"
                            android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/hur_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/hur_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/acc_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/acc_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/cus_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="19dp"
                                android:paddingRight="19dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginLeft="6dp"
                                android:text="@string/cus_and_icon"
                                android:textColor="@drawable/tc_job_radio"
                                android:paddingBottom="8dp"
                                android:button="@null"
                                android:background="@drawable/bg_job_radio">
                            </androidx.appcompat.widget.AppCompatRadioButton>
                        </RadioGroup>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>